<Window x:Class="OnlineShop.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShop.Views"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="250" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Grid.Column="1" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <!-- Current Password -->
            <TextBlock Text="Current Password:" Margin="0,5,0,0"/>
            <PasswordBox Name="CurrentPasswordBox" Margin="0,0,0,10" />

            <!-- New Password -->
            <TextBlock Text="New Password:" Margin="0,5,0,0"/>
            <PasswordBox Name="NewPasswordBox" Margin="0,0,0,10" />

            <!-- Confirm New Password -->
            <TextBlock Text="Confirm New Password:" Margin="0,5,0,0"/>
            <PasswordBox Name="ConfirmNewPasswordBox" Margin="0,0,0,10" />

            <!-- Save Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
